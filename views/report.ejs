    <div id="container">
        <div id="main">
            <!-- Report Form -->
            <div class="container rounded" id="reportCont" style="background-color: white; margin-top: 20px;"><br />
                <h3 style="text-align: center; color: #3e32a8;">Daily Report</h3><br />
                <form action="/send-email" method="post">
                <div class="row">
                    <div class="col-md-10" id="reportform">
                        <div class="row">
                            <div class="col-sm-6">
                                <h5>Name:</h5>
                                <input type="text" class="form-control" name="email" placeholder="Enter Name" style="background-color: #f0f0f0;" required>
                            </div>

                            <div class="col-sm-6">
                                <h5>Date:</h5>
                                <input type="text" class="form-control" placeholder="dd/mm/yyyy" name="date" style="background-color: #f0f0f0;" required>
                            </div>
                        </div>
                        <br>
                        <div class="form-group">
                            <h5>Tasks Assigned:</h5>
                            <textarea rows="8" class="form-control" name="tasks" style="background-color: #f0f0f0;" required></textarea>
                        </div>

                        <div class="form-group">
                            <h5>Tasks Completed:</h5>
                            <textarea rows="8" class="form-control" name="completed" style="background-color: #f0f0f0;" required></textarea>
                        </div>

                        <div class="form-group">
                            <h5>Learnings:</h5>
                            <textarea rows="8" class="form-control" name="learnings" style="background-color: #f0f0f0;" required></textarea>
                        </div>

                        <div class="form-group text-right">
                            <button type="submit" class="btn" id="submitbtn">Send</button>
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>


